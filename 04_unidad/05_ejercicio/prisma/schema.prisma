generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Categoria {
  id_categoria BigInt     @id @default(autoincrement())
  nombre       String     @unique @db.VarChar(50)
  creado       DateTime   @default(now()) @map("creado")
  actualizado  DateTime   @updatedAt @map("actualizado")
  productos    Producto[]

  @@map("categorias")
}

model Producto {
  id_producto  BigInt   @id @default(autoincrement())
  nombre       String   @unique @db.VarChar(120)
  descripcion  String?  @db.Text
  precio       Decimal  @db.Decimal(10, 2)
  creado       DateTime @default(now()) @map("creado")
  actualizado  DateTime @updatedAt @map("actualizado")
  id_categoria BigInt   @map("id_categoria")

  categoria Categoria @relation(fields: [id_producto], references: [id_categoria])

  @@map("productos")
}
